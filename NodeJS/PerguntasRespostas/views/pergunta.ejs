<%- include ('partials/header.ejs') %>
<body>
  <%- include ('partials/navbar.ejs') %>

  <div class="container">
    <br>
    <h1><%= pergunta.titulo %></h1>
    <hr />
    <p><%= pergunta.descricao %></p>
    <hr />
    <form method="POST" action="/responder">
        <h3>Responda</h3>
        <label>Resposta:</label>
        <textarea class="form-control" placeholder="Responda a pergunta" name="corpo"></textarea>
        <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
        <br>
        <button class="btn btn-primary">Responder</button>
    </form>
    <hr />
    <h3>Respostas</h3>
    <% respostas.forEach(resposta=> { %>
    <div class="card"> 
      <div class="card-body">
        <p><%= resposta.corpo %></p>
      </div>
  </div>
</br>
  <% }) %>
</body>

<%- include ('partials/footer.ejs') %>
